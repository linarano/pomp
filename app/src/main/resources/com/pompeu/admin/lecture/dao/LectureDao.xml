<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.pompeu.dao.LectureDao">

  <resultMap type="class" id="classMap">
    <id column="class_no" property="no"/>
    <result column="location_no" property="locationNo"/>
    <result column="creator_no" property="creatorNo"/>
    <result column="ex_no" property="exNo"/>
    <result column="name" property="name"/>
    <result column="start_date" property="startDate"/>
    <result column="end_date" property="endDate"/>
    <result column="class_price" property="classPrice"/>
    <result column="class_info" property="classInfo"/>
    <result column="register_date" property="registerDate"/>
    <result column="status" property="status"/>
    <result column="admin_message" property="adminMessage"/>
    <result column="total_rate" property="totalRate"/>
    <result column="in_out_ex" property="inOutEx"/>
  </resultMap>

  <select id="countAll" resultType="int">
    select count(*) from class
  </select>
  
  <select id="findAll" resultMap="classMap">
    select 
      class_no,
      creator_no,
      name,
      start_date,
      end_date,
      class_price,
      register_date,
      status
    from 
      class
    order by 
      class_no desc
  </select>
 
  <select id="findByNo" resultMap="classMap" parameterType="int"> 
    select 
      class_no,
      creator_no,
      ex_no,
      name,
      start_date,
      end_date,
      class_price,
      class_info,
      register_date,
      status,
      admin_message,
      total_rate,
      in_out_ex
    from 
      class
    where 
      class_no=#{no}
  </select>

  <update id="update" parameterType="class">
    update class set 
      admin_message=#{adminMessage}
    where 
      class_no=#{no}
  </update>
  
</mapper>


