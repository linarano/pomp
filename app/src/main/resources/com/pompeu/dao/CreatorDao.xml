<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.pompeu.dao.CreatorDao">

  <resultMap type="creator" id="creatorMap">
    <id column="creator_no" property="no"/>
    <result column="info" property="info"/>
    <result column="bank" property="bank"/>
    <result column="account" property="account"/>
  </resultMap>

  <select id="countAll" resultType="int">
    select count(*) from creator
  </select>
  
  <select id="findAll" resultMap="creatorMap">
    select 
      creator_no,
      info,
      bank,
      account
    from 
      creator 
    order by 
      creator_no asc
  </select>
  
  <insert id="insert" parameterType="creator">
    insert into creator(create_no,info,bank,account) 
    values(#{no},#{info},#{bank},#{account})
  </insert>
  
  <select id="findByNo" resultMap="creatorMap" parameterType="int">
    select 
      creator_no,
      info,
      bank,
      account
    from 
      creator 
    where 
      creator_no=#{no}
  </select>

  <update id="update" parameterType="creator">
    update creator set 
	    info=#{info},
	    bank=#{bank},
	    account=#{account}
    where 
      creator_no=#{no}
  </update>

  <delete id="delete" parameterType="int">
    delete from creator 
    where creator_no=#{no}
  </delete>

</mapper>








